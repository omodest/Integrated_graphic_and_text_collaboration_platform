.login-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(to bottom, rgba(24, 144, 255, 0.1), #fff);
  padding: 0;
  align-items: center;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
  width: 100%;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 16rpx rgba(24, 144, 255, 0.1);
}

.welcome {
  font-size: 48rpx;
  font-weight: 600;
  background: linear-gradient(120deg, #1890ff, #69c0ff);
  -webkit-background-clip: text;
  color: transparent;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.login-form {
  width: calc(100% - 80rpx);
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.1);
  margin: 0 auto;
}

.form-item {
  margin-bottom: 40rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #1890ff;
  background: #fff;
  box-shadow: 0 0 0 2rpx rgba(24, 144, 255, 0.2);
}

.placeholder {
  color: #999;
}

.form-tips {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 48rpx;
}

.forget-pwd {
  font-size: 24rpx;
  color: #1890ff;
  padding: 4rpx 0;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(120deg, #1890ff, #69c0ff);
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 88rpx;
  text-align: center;
  margin-bottom: 32rpx;
  border: none;
  box-shadow: 0 8rpx 16rpx rgba(24, 144, 255, 0.2);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(24, 144, 255, 0.2);
}

.login-btn.disabled {
  background: #e8e8e8;
  color: #999;
  box-shadow: none;
}

.login-btn::after {
  border: none;
}

.register-tips {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 80rpx;
}

.register-link {
  color: #1890ff;
  display: inline;
  font-weight: 500;
  padding: 4rpx 0;
  position: relative;
}

.register-link::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 2rpx;
  background: #1890ff;
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.register-link:active::after {
  transform: scaleX(1);
}

.login-footer {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 40rpx;
  margin-top: auto;
  width: 100%;
}

.agreement-text {
  color: #999;
}

.agreement-link {
  color: #1890ff;
  display: inline;
  padding: 4rpx 0;
}

.wx-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.login-tips {
  font-size: 24rpx;
  color: #999;
}

.link {
  color: #07c160;
  display: inline;
}

/* 用户信息展示样式 */
.user-container {
  min-height: 100vh;
  background: linear-gradient(to bottom, rgba(24, 144, 255, 0.1), #fff);
  padding: 40rpx;
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.1);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 24rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.user-role {
  font-size: 24rpx;
  color: #1890ff;
  background: rgba(24, 144, 255, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
  display: inline-block;
}

.info-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.1);
}

.info-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.info-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.info-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
  margin-right: 24rpx;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: #fff;
  border: 2rpx solid #1890ff;
  border-radius: 44rpx;
  color: #1890ff;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 88rpx;
  text-align: center;
  margin-top: 40rpx;
  transition: all 0.3s ease;
}

.logout-btn:active {
  background: rgba(24, 144, 255, 0.1);
} 