.public-album {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.search-box {
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 20rpx;
  background-color: #f5f5f5;
}

.search-input-box {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 32rpx;
  padding: 0 24rpx;
  height: 64rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  height: 64rpx;
  font-size: 28rpx;
}

.search-clear {
  padding: 10rpx;
}

.clear-icon {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.3;
}

.load-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 28rpx;
} 