/* pages/privateAlbum/index.wxss */
.private-album {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.private-space-container {
  padding: 20rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-state-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.create-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #1890ff;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
}

.space-list {
  padding: 20rpx 0;
}

.space-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.space-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.space-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.space-stat {
  font-size: 28rpx;
  color: #666;
}

.stat-label {
  color: #999;
  margin-right: 8rpx;
}

/* 未登录状态 */
.no-login {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.login-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.login-tip {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.login-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #1890ff;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
}

/* 无私人空间状态 */
.no-space {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.space-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.space-tip {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

/* 图片列表 */
.picture-list {
  padding-bottom: 20rpx;
}

/* 瀑布流布局 */
.waterfall {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  box-sizing: border-box;
}

.picture-item {
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
  break-inside: avoid;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.picture {
  width: 100%;
  height: auto;
  display: block;
}

.picture-info {
  padding: 16rpx;
}

.picture-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.picture-tags {
  display: flex;
  flex-wrap: wrap;
  margin: 8rpx 0;
}

.tag {
  font-size: 24rpx;
  color: #1890ff;
  background: rgba(24, 144, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}

.picture-category {
  font-size: 24rpx;
  color: #999;
}

/* 加载状态 */
.loading, .no-more {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  padding: 20rpx 0;
}