.waterfall-container {
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  background: #f5f5f5;
}

.waterfall-column {
  flex: 1;
  padding: 0 10rpx;
}

.waterfall-item {
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.waterfall-item image {
  width: 100%;
  display: block;
  background-color: #f0f0f0; /* 图片加载前的背景色 */
}

.image-info {
  padding: 16rpx;
  background: linear-gradient(to bottom, transparent, rgba(0,0,0,0.3));
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

.title {
  font-size: 24rpx;
  color: #fff;
  line-height: 1.4;
  text-shadow: 0 1px 2px rgba(0,0,0,0.3);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
} 